<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.geoff.mytrainer.MainActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:text="Workout 1"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp" >

            <EditText
                android:id="@+id/exercise1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/exercise"
                android:layout_weight="2" />

            <EditText
                android:id="@+id/weight1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/weight"
                android:inputType="number"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/reps1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/reps"
                android:inputType="number"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edit_message1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/edit_message"
                android:inputType="number"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/rest1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/rest"
                android:inputType="number"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp" >

            <EditText
                android:id="@+id/exercise2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/exercise"
                android:layout_weight="2" />

            <EditText
                android:id="@+id/weight2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/weight"
                android:inputType="number"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/reps2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/reps"
                android:inputType="number"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edit_message2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/edit_message"
                android:inputType="number"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/rest2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/rest"
                android:inputType="number"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp" >

            <EditText
                android:id="@+id/exercise3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/exercise"
                android:layout_weight="2" />

            <EditText
                android:id="@+id/weight3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/weight"
                android:inputType="number"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/reps3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/reps"
                android:inputType="number"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edit_message3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/edit_message"
                android:inputType="number"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/rest3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/rest"
                android:inputType="number"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:onClick="sendMessage" />

    </LinearLayout>

</LinearLayout>
